@if (Viagem.StatusViagem == Status.Aberta.ToString() || Viagem.StatusViagem == Status.EmAndamento.ToString())
{
    Opacidade = "100%";
    CorStatus = "rgba(0,0,0,.125)";
}
else
{
    Opacidade = "50%";
    CorStatus = "#dc3545";
}


<div class="card" style="opacity:@Opacidade">
    <h2 class="card-header title">@Viagem.NomeViagem <button class="btn-exibir-despesas"><FeatherEye Size="24" Color="#000" StrokeWidth="1.7f" /></button></h2>
    <div>
        <h4 class="card-title">Status da viagem: @Viagem.StatusViagem</h4>
        <hr />
        <h5 class="card-subtitle">Informações sobre a viagem:</h5>
        <ul>
            <li class="card-text">Descrição da viagem: @Viagem.DescricaoViagem</li>
            <li class="card-text">De: @Viagem.DataInicial.Date</li>
            <li class="card-text">Até: @Viagem.DataFinal.Date</li>
            <li>Adiantamento incial: @Viagem.Adiantamento</li>
        </ul>
        <hr />
        <h5 style="font-weight:bold">Informações sobre o funcionário:</h5>
        <ul>
            <li class="card-text">Nomes: @Funcionario.Nome @Funcionario.Sobrenome</li>
            <li class="card-text">Matrícula: @Funcionario.Matricula</li>
            <li class="card-text">CPF: @Funcionario.CPF</li>
        </ul>
    </div>
</div>

@code {

    [Parameter]
    public ViagemDTO Viagem { get; set; }

    [Parameter]
    public FuncionarioDTO Funcionario { get; set; }

    private string Opacidade { get; set; }
    private string CorStatus { get; set; }

}